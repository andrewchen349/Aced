<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/more_info_back"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/more_info_trash"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/trash" />


    <TextView
        android:id="@+id/more_info_task"
        android:layout_below="@+id/more_info_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:hint="Task"
        android:textSize="20sp"
        android:textStyle="bold"
       />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/more_info_task"
        app:srcCompat="@drawable/iconinfo" />

    <TextView
        android:id="@+id/more_info_time"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@+id/more_info_task"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="12dp"
        android:text="Time"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/more_info_displaytime"
        android:layout_width="191dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/more_info_time"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        android:hint="time"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/more_info_displaytime"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/location"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:hint="Location"
        android:layout_below="@+id/more_info_displaytime"
        android:layout_toRightOf="@+id/imageView8"
        android:textAlignment="viewStart"
        android:layout_marginLeft="12dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/location_input"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/imageView8"
        android:hint="User Location" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:textColor="#5AC9DD"
        android:fontFamily="@font/segoeui"
        android:background="@android:color/white"
        />

</RelativeLayout>